const int botao = 7;  // Pino onde o botão está conectado
const int ledVerde = 4; // Pino onde o LED está conectado
const int ledAmarelo = 3; // Pino onde o LED está conectado
const int ledVermelho = 2; // Pino onde o LED está conectado


void setup() {
    Serial.begin(9600);          // Inicia a comunicação serial
    pinMode(botao, INPUT);  // Define o botão como entrada 
    pinMode(ledVerde, OUTPUT);  // Define o ledVerde como saída 
    pinMode(ledAmarelo, OUTPUT);  // Define o ledAmarelo como saída 
    pinMode(ledVermelho, OUTPUT);  // Define o ledVermelho como saída 
}

void loop() {
    int estadoBotao = digitalRead(botao);  // Lê o estado do botão

    if (estadoBotao == HIGH) {  // O botão está pressionado
        digitalWrite(ledVerde, LOW); //Acende o Led
        digitalWrite(ledAmarelo, HIGH); //Acende o Led
        delay(8000);
        digitalWrite(ledAmarelo, LOW); //Acende o Led
        digitalWrite(ledVermelho, HIGH); //Acende o Led
        delay(8000);

    } else {
        digitalWrite(ledVerde, HIGH); //Caso contrário, o Led fica desligado
        digitalWrite(ledAmarelo, LOW); //Caso contrário, o Led fica desligado
        digitalWrite(ledVermelho, LOW); //Caso contrário, o Led fica desligado
    }

    delay(200);  // Pequena pausa para evitar leituras instáveis
}
